@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<TestApp.Models.Product>

<h2>Products List</h2>

<!-- Filter Options for Employees -->
@if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Employee")
{
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label>Category:</label>
            <input type="text" name="category" class="form-control" placeholder="Enter category" />
        </div>
        <div class="form-group">
            <label>Start Date:</label>
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="form-group">
            <label>End Date:</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Filter</button>
    </form>
}

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
            <th>Farmer Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                <td>@product.Farmer?.Name</td> <!-- Display Farmer Name -->
                <td>
                    <a href="/Product/Details/@product.Id" class="btn btn-info">Details</a>

                    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Farmer")
                    {
                        <a href="/Product/Edit/@product.Id" class="btn btn-warning">Edit</a>
                        <a href="/Product/Delete/@product.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Farmer")
{
    <a href="/Product/Add" class="btn btn-success">Add New Product</a>
}
